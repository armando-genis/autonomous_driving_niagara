<?xml version="1.0"?>
<robot name="niagara_car" xmlns:xacro="http://www.ros.org/wiki/xacro">


  <!-- <property name="M_PI" value="3.1415926535897931" /> -->

    <link name="dummy_link"/>

    <joint name="dummy_joint" type="fixed">
        <parent link="dummy_link"/>
        <child link="base_link"/>
        <origin xyz="0 0 0" rpy="0 0 0"/>
    </joint>


  <link
    name="base_link">
    <inertial>
      <mass value="1.0" />
      <origin xyz="0 0 0" /> 
      <inertia  ixx="1.0" ixy="0.0"  ixz="0.0"  iyy="1.0"  iyz="0.0"  izz="1.0" />
    </inertial>
    <visual>
      <origin
        xyz="0 0 0"
        rpy="0 0 0" />
      <geometry>
        <mesh
          filename="file://$(find niagara_model)/meshes/base_link.STL" />
      </geometry>
      <material
        name="">
        <color
          rgba="1 1 1 1" />
      </material>
    </visual>
    <collision>
      <origin
        xyz="0 0 0"
        rpy="0 0 0" />
      <geometry>
        <mesh
          filename="file://$(find niagara_model)/meshes/base_link.STL" />
      </geometry>
    </collision>
  </link>


  <link name="base_footprint" />

  <joint name="base_to_base_footprint" type="fixed">
    <parent link="base_link"/>
    <child link="base_footprint"/>
    <origin xyz="0 0 -0.28" rpy="0 0 0"/>
  </joint>

    <!-- Right Rear Steering Hinge -->
  <link name="right_front_hinge" >
    <inertial>
      <mass value="1.0" />
      <origin xyz="0 0 0" /> 
      <inertia  ixx="1.0" ixy="0.0"  ixz="0.0"  iyy="1.0"  iyz="0.0"  izz="1.0" />
    </inertial>

    <visual>
      <origin xyz="0 0 0" rpy="${3.1415926535897931/2} 0 0" />
      <geometry>
        <cylinder radius="0.15" length="0.01" />
      </geometry>
    </visual>

  </link>

  <joint name="right_front_hinge_joint" type="revolute">
      <origin xyz="0.787346576344423 -0.395625727164768 -0.109492959255616" rpy="0 0 0" />
      <parent link="base_link" />
      <child link="right_front_hinge" />
      <axis xyz="0 0 1" />
      <limit lower="-0.2" upper="0.2" effort="100" velocity="10" />
  </joint>

  <!-- Right wheel front -->

  <link name="right_front">
    <inertial>
      <mass value="1.0" />
      <origin xyz="0 0 0" /> 
      <inertia  ixx="1.0" ixy="0.0"  ixz="0.0"  iyy="1.0"  iyz="0.0"  izz="1.0" />
    </inertial>
    <visual>
      <origin
        xyz="0 0 0"
        rpy="0 0 0" />
      <geometry>
        <mesh
          filename="file://$(find niagara_model)/meshes/right_front.STL" />
      </geometry>
      <material
        name="">
        <color
          rgba="0.647058823529412 0.619607843137255 0.588235294117647 1" />
      </material>
    </visual>
    <collision>
      <origin
        xyz="0 0 0"
        rpy="0 0 0" />
      <geometry>
        <mesh
          filename="file://$(find niagara_model)/meshes/right_front.STL" />
      </geometry>
    </collision>
  </link>

  <joint name="right_front_j" type="continuous">
    <origin xyz="0 0 0" rpy="0 0 0" />
    <parent
      link="right_front_hinge" />
    <child
      link="right_front" />
    <axis
      xyz="0.0257221620424006 0.999669130452604 0" />
  </joint>

  <!-- Left Front Steering Hinge -->
  <link name="left_front_hinge" >
    <inertial>
      <mass value="1.0" />
      <origin xyz="0 0 0" /> 
      <inertia  ixx="1.0" ixy="0.0"  ixz="0.0"  iyy="1.0"  iyz="0.0"  izz="1.0" />
    </inertial>
    <visual>
      <origin xyz="0 0 0" rpy="${3.1415926535897931/2} 0 0" />
      <geometry>
        <cylinder radius="0.15" length="0.01" />
      </geometry>
    </visual>
  </link>

  <joint name="left_front_hinge_joint" type="revolute">
    <origin xyz="0.790705328433337 0.389779978280481 -0.109492959255612" rpy="0 0 0" />
    <parent link="base_link" />
    <child link="left_front_hinge" />
    <axis xyz="0 0 1" />
    <limit lower="-0.2" upper="0.2" effort="100" velocity="10" />
  </joint>

  <!-- Left wheel front -->
  <link name="left_front">
    <inertial>
      <mass value="1.0" />
      <origin xyz="0 0 0" /> 
      <inertia  ixx="1.0" ixy="0.0"  ixz="0.0"  iyy="1.0"  iyz="0.0"  izz="1.0" />
    </inertial>
    <visual>
      <origin
        xyz="0 0 0"
        rpy="0 0 0" />
      <geometry>
        <mesh
          filename="file://$(find niagara_model)/meshes/left_front.STL" />
      </geometry>
      <material
        name="">
        <color
          rgba="0.647058823529412 0.619607843137255 0.588235294117647 1" />
      </material>
    </visual>
    <collision>
      <origin
        xyz="0 0 0"
        rpy="0 0 0" />
      <geometry>
        <mesh
          filename="file://$(find niagara_model)/meshes/left_front.STL" />
      </geometry>
    </collision>
  </link>


  <joint name="left_front_j" type="continuous">
    <origin xyz="0 0 0" rpy="0 0 0" />
    <parent link="left_front_hinge" />
    <child
      link="left_front" />
    <axis
      xyz="-0.0254593284537916 -0.99967585876357 0" />
  </joint>

  <!-- Left wheel rear -->

  <link name="left_rear">
    <inertial>
      <mass value="1.0" />
      <origin xyz="0 0 0" /> 
      <inertia  ixx="1.0" ixy="0.0"  ixz="0.0"  iyy="1.0"  iyz="0.0"  izz="1.0" />
    </inertial>
    <visual>
      <origin
        xyz="0 0 0"
        rpy="0 0 0" />
      <geometry>
        <mesh
          filename="file://$(find niagara_model)/meshes/left_rear.STL" />
      </geometry>
      <material
        name="">
        <color
          rgba="0.647058823529412 0.619607843137255 0.588235294117647 1" />
      </material>
    </visual>
    <collision>
      <origin
        xyz="0 0 0"
        rpy="0 0 0" />
      <geometry>
        <mesh
          filename="file://$(find niagara_model)/meshes/left_rear.STL" />
      </geometry>
    </collision>
  </link>

  <joint name="left_rear_j"
    type="continuous">
    <origin
      xyz="-1.04780116842239 0.391577672139248 -0.10950419548961"
      rpy="0 0 0" />
    <parent
      link="base_link" />
    <child
      link="left_rear" />
    <axis
      xyz="0 1 0" />
  </joint>


  <!-- Right wheel rear -->

  <link name="right_rear">
    <inertial>
      <mass value="1.0" />
      <origin xyz="0 0 0" /> 
      <inertia  ixx="1.0" ixy="0.0"  ixz="0.0"  iyy="1.0"  iyz="0.0"  izz="1.0" />
    </inertial>
    <visual>
      <origin
        xyz="0 0 0"
        rpy="0 0 0" />
      <geometry>
        <mesh
          filename="file://$(find niagara_model)/meshes/right_rear.STL" />
      </geometry>
      <material
        name="">
        <color
          rgba="0.647058823529412 0.619607843137255 0.588235294117647 1" />
      </material>
    </visual>
    <collision>
      <origin
        xyz="0 0 0"
        rpy="0 0 0" />
      <geometry>
        <mesh
          filename="file://$(find niagara_model)/meshes/right_rear.STL" />
      </geometry>
    </collision>
  </link>

  <joint name="right_rear_j" type="continuous">
    <origin
      xyz="-1.04780116842239 -0.396751500712401 -0.109504195489612"
      rpy="0 0 0" />
    <parent
      link="base_link" />
    <child
      link="right_rear" />
    <axis
      xyz="0 1 0" />
  </joint>


  

  <!-- Add the remaining xacros -->
    <xacro:include filename="$(find niagara_model)/urdf/niagara.gazebo" />

</robot>